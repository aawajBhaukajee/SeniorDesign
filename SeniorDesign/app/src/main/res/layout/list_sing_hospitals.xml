<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">
    >


    <TextView
        android:id="@+id/listnameH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hosname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/listemailH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hosemail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listnameH" />

    <TextView
        android:id="@+id/listlocationH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hoslocation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listemailH" />


</androidx.constraintlayout.widget.ConstraintLayout>